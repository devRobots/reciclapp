<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.fragment.RegistroFragment" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="40dp"
		android:layout_weight="1"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/imageView2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:contentDescription="@string/descripcion_img"
			android:src="@drawable/logo_crq_verde" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="20dp"
		android:layout_weight="0.5"
		android:orientation="vertical">

		<EditText
			android:id="@+id/edtRegistroNombre"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:autofillHints=""
			android:hint="@string/nombre"
			android:inputType="none|textPersonName"
			android:selectAllOnFocus="true" />

		<EditText
			android:id="@+id/edtRegistroApellido"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:autofillHints=""
			android:hint="@string/apellido"
			android:inputType="none|textPersonName"
			android:selectAllOnFocus="true" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/tipo_persona" />
		<Spinner
			android:id="@+id/spnRegistroTipoPersona"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:listitem="@array/tipo_personas"
			android:selectAllOnFocus="true" />

		<EditText
			android:id="@+id/edtRegistroNumDoc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:autofillHints=""
			android:hint="@string/num_documento"
			android:inputType="number|text|textEmailAddress|phone"
			android:selectAllOnFocus="true" />

		<EditText
			android:id="@+id/edtRegistroCorreo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:autofillHints=""
			android:hint="@string/correo"
			android:imeOptions="actionDone"
			android:inputType="none|textEmailAddress"
			android:selectAllOnFocus="true" />

		<EditText
			android:id="@+id/edtRegistroContrasenia"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:autofillHints=""
			android:hint="@string/contraseÃ±a"
			android:imeOptions="actionDone"
			android:inputType="textPassword"
			android:selectAllOnFocus="true" />

		<EditText
			android:id="@+id/edtRegistroDireccion"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:autofillHints=""
			android:hint="@string/direccion"
			android:imeOptions="actionDone"
			android:inputType="none|textPostalAddress"
			android:selectAllOnFocus="true" />

		<Button
			android:id="@+id/btnRegistrarRegistro"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/registrar" />

	</LinearLayout>
</LinearLayout>